{
  "manifest_version": 3,
  "name": "Domain-Specific To-Do List",
  "version": "1.0",
  "description": "A to-do list tailored to the current domain.",
  "permissions": ["storage", "activeTab","notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
